[Unit]
Description=JMP.chat XMPP-SMS Bridge for OpenClaw
After=network-online.target openclaw.service
Wants=network-online.target

[Service]
Type=simple
User=YOUR_USER
Environment=JMP_JID=you@jabber.fr
Environment=JMP_PASSWORD=your-xmpp-password
Environment=JMP_HOOK_URL=http://127.0.0.1:18789/hooks/sms
Environment=JMP_HOOK_TOKEN=your-openclaw-hooks-token
ExecStart=/usr/bin/python3 /path/to/jmp_bridge.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
